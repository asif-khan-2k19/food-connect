    <a href="/help"><button class="faqs"><span>ğŸ¤ Help</span></button></a>
    <% if(user.isAdmin){%>
        <a href="/all-donations"><button class="history"><span>ğŸ“œ All Donations</span></button></a>
    <% }else{%>
        <a href="/home"><button class="history"><span>ğŸ“œ Donation History</span></button></a>
    <% }%>
